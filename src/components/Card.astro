---
export interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="flex list-none p-1 rounded-lg dark:bg-nord1 bg-nord4">
  <a
    class="w-full no-underline leading-6 py-4 px-5 rounded-md opacity-80"
    href={href}
  >
    <h2 class="m-0 text-xl">
      {title}
      <span>&rarr;</span>
    </h2>
    <p class="mt-2 mb-0">
      {body}
    </p>
  </a>
</li>
